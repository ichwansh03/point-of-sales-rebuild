<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RebuildPOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RebuildPOS" parent="Base.Theme.RebuildPOS" />

    <style name="MarginInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/dimen_input_top_bottom</item>
        <item name="android:layout_marginStart">@dimen/dimen_input_start_end</item>
        <item name="android:layout_marginEnd">@dimen/dimen_input_start_end</item>
    </style>

    <style name="MarginInputDropDownText" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">@dimen/dimen_input_top_bottom</item>
        <item name="android:layout_marginStart">@dimen/dimen_input_start_end</item>
        <item name="android:layout_marginEnd">@dimen/dimen_input_start_end</item>
    </style>

    <style name="CardViewButtonStyle" parent="MarginInputText">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextDescription">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextInCard" parent="TextDescription">
        <item name="android:padding">@dimen/dimen_input_start_end</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>